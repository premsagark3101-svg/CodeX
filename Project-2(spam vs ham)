#project-2 (spam vs ham)
# Step: Importing all required libraries
import pandas as pd
import seaborn as sns
import matplotlib.pyplot as plt
from sklearn.model_selection import train_test_split
from sklearn.feature_extraction.text import TfidfVectorizer
from sklearn.naive_bayes import MultinomialNB
from sklearn.metrics import accuracy_score, confusion_matrix, classification_report
from sklearn.preprocessing import LabelEncoder
from nltk.corpus import stopwords
from nltk.stem import PorterStemmer
import re
import nltk

# Step: Downloading stopwords (only first time)
nltk.download('stopwords')

# Step: Loading the dataset
df = pd.read_csv("/content/SMSSpamCollection",
                 sep="\t",      # tab-separated
                 header=None,   # no header in file
                 names=["label", "message"],  # assign proper column names
                 encoding="latin-1")

df.columns = ["label", "message"]

# Step: Encoding spam/ham labels
encoder = LabelEncoder()
df["label"] = encoder.fit_transform(df["label"])

# Step: Text cleaning function
ps = PorterStemmer()
stop_words = set(stopwords.words("english"))

def clean_text(text):
    text = text.lower()
    text = re.sub(r"[^a-zA-Z]", " ", text)
    words = text.split()
    words = [ps.stem(word) for word in words if word not in stop_words]
    return " ".join(words)

# Step: Applying preprocessing to messages
df["cleaned"] = df["message"].apply(clean_text)

# Step: Splitting data into train and test
X_train, X_test, y_train, y_test = train_test_split(
    df["cleaned"], df["label"], test_size=0.2, random_state=42
)

# Step: Converting text to TF-IDF vectors
tfidf = TfidfVectorizer(max_features=3000)
X_train = tfidf.fit_transform(X_train)
X_test = tfidf.transform(X_test)

# Step: Training the Naive Bayes model
model = MultinomialNB()
model.fit(X_train, y_train)

# Step: Predicting test results
y_pred = model.predict(X_test)

# Step: Printing accuracy and detailed report
print("Accuracy:", accuracy_score(y_test, y_pred))
print("\nClassification Report:\n", classification_report(y_test, y_pred))

# Step: Creating confusion matrix
cm = confusion_matrix(y_test, y_pred)

# Step: Plotting confusion matrix heatmap
plt.figure(figsize=(6,4))
sns.heatmap(cm, annot=True, cmap="coolwarm", fmt="d",
            xticklabels=["Ham", "Spam"],
            yticklabels=["Ham", "Spam"])
plt.title("Spam vs Ham Confusion Matrix")
plt.xlabel("Predicted")
plt.ylabel("Actual")
plt.show()

# Step: Predicting a new message
sample = ["Congratulations! You've won a free ticket. Call now!"]
sample_clean = [clean_text(sample[0])]
sample_vec = tfidf.transform(sample_clean)
prediction = model.predict(sample_vec)
print("Prediction for new message:", "Spam" if prediction[0] == 1 else "Ham")
